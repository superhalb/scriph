<!DOCTYPE html>
<html>
	<head>
    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    {{! Responsive Meta Tags }}
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<title>Scriph</title>
		{{>assets}}
		<link href="css/editor.css" rel="stylesheet" type="text/css">
		<link href="css/uploadfiles.css" rel="stylesheet" type="text/css">
		<link href="css/popup.css" rel="stylesheet" type="text/css">
	</head>
	<style>
		#content_input body{
			border-left: 5px solid green;
		}
	</style>
  <body>	
		<div id="systemindex">
		{{> header}}
			<div id="editor">
				<div id="input_area">
					<div class="wrap-content">
						<textarea id="content_input" class="edit-post-content pad-wrap-content" counter=""></textarea>
						<div id="title-mark" class="tmark tmark_t" style="top: 16px;"></div>
						<div id="excerpt-mark"  class="tmark tmark_e"></div>
					</div>
					<div id="content-counter" class="char-counter" counter="0"></div>
				</div>
				<div id="preview_area">
					<div class="wrap-content pad-wrap-content">
						<div id="title_preview" class="post-preview post-title"></div>
						<div id="excerpt_preview" class="post-preview post-excerpt"> </div>
						<div id="text_preview" class="post-preview post-content"> </div>
					</div>
				</div>
			</div>
			<div id="options">
				<ul class="menu">
					<li action="toggle attachs">
						<i class="fa fa-picture-o"></i><div class="attach-counter hide"></div><span>Adjuntos</span>
					</li>
					<li>
						<i class="fa fa-tags"></i><span><input id="tags_input" class="edit-post-tags" placeholder="Etiquetas" value="{{Post.tags}}"></input></span>
					</li>
				</ul>
			</div>
			<div id="uploader"></div>
		</div>
		{{> jsvendors }}
		<script type="text/javascript">
			var Scriph = Scriph || {};
			Scriph.Editor = Scriph.Editor || {};
			Scriph.Editor.Post = {{& Post.json}};
			Scriph.Editor.Post.references = {{& Post.references}};
    </script>
    <script src="js/editor.attachbox.js" type="text/javascript"></script>
    <script src="js/editor.attachs.js" type="text/javascript"></script>
    <script src="js/draganddrop.js" type="text/javascript"></script>
    <script src="js/popup.js" type="text/javascript"></script>
    <script src="js/editor.realtime.js" type="text/javascript"></script>
		<script src="js/editor.menu.js" type="text/javascript"></script>
		<script src="js/common.menu.js" type="text/javascript"></script>
  </body>
</html>